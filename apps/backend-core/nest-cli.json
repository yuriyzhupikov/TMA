{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "tsConfigPath": "tsconfig.build.json",
    "outDir": "../../dist/backend-core",
    "deleteOutDir": true,
    "swcOptions": {
      "sourceMaps": true,
      "module": {
        "type": "commonjs"
      },
      "jsc": {
        "target": "es2021",
        "parser": {
          "syntax": "typescript",
          "decorators": true
        },
        "transform": {
          "legacyDecorator": true,
          "decoratorMetadata": true
        }
      }
    }
  }
}
