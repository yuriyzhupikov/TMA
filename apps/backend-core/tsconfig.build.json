{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "../../dist/backend-core",
    "target": "ES2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.(spec|test).ts", "node_modules", "dist"]
}
